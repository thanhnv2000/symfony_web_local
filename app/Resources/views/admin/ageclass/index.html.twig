          <div class="list-group" id="list-tab" role="tablist">
            {% for khoi in khoi_info %}
              <a class="list-group-item list-group-item-action " id="list-{{khoi.id}}-list" data-bs-toggle="list" href="#list-{{khoi.id}}" role="tab" aria-controls={{khoi.id}}>
