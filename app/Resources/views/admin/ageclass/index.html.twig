                            {% for class in khoi.class_of_khoi %}
                                <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-10">{{ class.name}}</div>
                                    <div class="col-md-2">
                                        <a href="{{ path('editClass', {'id': class.id}) }}" class="btn btn-primary">Show</a>
                                    </div>
                                </div>
                            </li>   
                {% endfor %}
                    </ul>
                </div>

            {% endfor %}
         
            
